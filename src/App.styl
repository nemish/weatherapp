@font-face
  font-family Roboto
  src url(https://fonts.googleapis.com/css?family=Roboto)

@import './assets/css/weather-icons.css'


html
body
#root
  height 100%
  margin 0
  padding 0
  box-sizing border-box


.app
  font-family Roboto, sans-serif
  height 100%
  background #FC7A6E
  display flex
  color #555

.container
  display flex
  flex 1
  margin auto
  max-width 600px
  min-height 300px
  background #fff
  padding 20px
  border-radius 1px
  box-shadow: 0px 1px 3px 0px rgba(0,0,0,0.6)

.text-small
  font-size .9rem
  line-height 1.2rem

.text-xs
  font-size .7rem
  line-height 1rem

.margin-top-sm
  margin-top 10px

.margin-top-lg
  margin-top 20px

.flex
  display flex

.flex-wrap
  flex-wrap wrap

.flex-space-between
  justify-content space-between


.flex-align-items-center
  display flex
  align-items center
  justify-content center

.flex-1
  flex 1

.flex-column
  display flex
  flex-direction column

.font-regular
  font-weight 100

.font-1-5
  font-size 1.5rem

.app-title
  font-size 1.5em
  font-weight bold

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 1.5em  /* Preferred icon size */
  display inline-block
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing antialiased
  /* Support for Safari and Chrome. */
  text-rendering optimizeLegibility

  /* Support for Firefox. */
  -moz-osx-font-smoothing grayscale

  /* Support for IE. */
  font-feature-settings 'liga'

.text-capitalize
  text-transform capitalize

.text-center
  text-align center

.btn
  display inline-block
  border 1px solid #FC7A6E
  background transparent
  padding 5px 10px
  border-radius 2px
  cursor pointer

.pointer
  cursor pointer

.error
  color #e54343


@media (max-width: 650px)
  .container
    max-width 80%

// spinner styles
.loader
.loader:after
  border-radius 50%
  width 1em
  height 1em

.loader
  font-size 20px
  position relative
  border-top 2px solid rgba(0,0,0, 0.2)
  border-right 2px solid rgba(0,0,0, 0.2)
  border-bottom 2px solid rgba(0,0,0, 0.2)
  border-left 2px solid #ffffff
  animation load8 1.1s infinite linear

.loader.loader-big
  font-size 40px

@keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}